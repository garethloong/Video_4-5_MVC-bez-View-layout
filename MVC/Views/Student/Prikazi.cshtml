@using System
@using System.Collections.Generic
@using MVC.Models

@{
    Layout = null;
    //DateTime x = (DateTime)ViewData["x"]; // outboxing from an attribute to an object
    List<Student> studenti = (List<Student>)ViewData["studenti"];
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Prikazi</title>
    <style>
        table, td, th {
            border: 1px solid green;
        }

        thead {
            background-color: green;
            color: white;
        }
    </style>
</head>
<body>
    <div>
        @* Rok za zavrsetak radova je: @x.ToString("D")*@

        Spisak studenata: <br />
        <table>
            <thead>
                <tr>
                    <td>id</td>
                    <td>ime</td>
                    <td>prezime</td>
                    <td>Broj indexa</td>
                    <td>Fakultet</td>
                    <td>Smjer</td>
                    <td>Akcija</td>
                </tr>
            </thead>
            @foreach (Student item in studenti)
            {
                <tr>
                    <td>@item.Id.</td>
                    <td>@item.Korisnik.Ime</td>
                    <td>@item.Korisnik.Prezime</td>
                    <td>@item.BrojIndexa</td>
                    <td>@item.Smjer.Fakultet.Naziv</td>
                    <td>@item.Smjer.Naziv</td>
                    <td>
                        <a href="/Student/Obrisi?studentId=@item.Id">Delete</a>
                        <a href="/Student/Uredi?studentId=@item.Id">Edit</a>
                    </td>
                </tr>
            }
        </table>

    </div>
</body>
</html>
